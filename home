<div id="onboarding">
  Move the heart ‚ù§Ô∏è<br>
  Collect the glowing memories ‚ú®<br><br>
  <span style="font-size:14px;opacity:.8;">(Press any key or click to start)</span>
</div>

<div id="game">
  <div id="bgLayer"><div class="fogband"></div></div>
  <div class="player" id="player"></div>
  <div id="vignette"></div>
</div>

<div id="messageBox"></div>

<div id="final">
  <div>
    <h1>Happy Birthday üéâ</h1>
    <p>
      You‚Äôre not just a year older rn<br>
      You entered another chapter of your life which would be even more beautiful!<br>
      I‚Äôm genuinely grateful you exist ü´∂<br>
      Never forget U are such a beautiful soul
    </p>
    <button onclick="location.reload()">Relive ‚ú®</button>
    <button onclick="stay()">Just stay ü§ç</button>
  </div>
</div>

<script>
  const player = document.getElementById("player");
  const game = document.getElementById("game");
  const bgLayer = document.getElementById("bgLayer");
  const messageBox = document.getElementById("messageBox");
  const onboarding = document.getElementById("onboarding");
  const finalScreen = document.getElementById("final");

  let x = 100, y = 100;
  const speed = 6;

  let lastMove = Date.now();
  let started = false;

  let collected = 0;
  let messageQueue = [];
  let showingMessage = false;

  // MESSAGES MUST NOT CHANGE
  const messages = [
    "Hey you, travelling around making my each day more special :)",
    "You make life warmer just by existing <3",
    "I hope u grow even more than previous yearss!!!",
    "You make everything more easy and light, N I hope u keep ur beautiful smile on ur face more often ü´∂",
    "One last thing >"
  ];

  // --- start helper (keyboard OR click) ---
  function startGame(){
    if (started) return;
    started = true;
    onboarding.remove();
    // place player once
    player.style.left = x + "px";
    player.style.top = y + "px";
  }
  onboarding.addEventListener("click", startGame);

  // --- orbs ---
  const orbs = [];
  function createOrb(){
    const orb = document.createElement("div");
    orb.className = "orb";
    orb.style.left = Math.random() * (window.innerWidth - 60) + "px";
    orb.style.top  = Math.random() * (window.innerHeight - 160) + "px";
    game.appendChild(orb);
    orbs.push(orb);
  }
  messages.forEach(createOrb);

  // --- movement ---
  document.addEventListener("keydown", (e) => {
    if (!started) startGame();
    lastMove = Date.now();

    const key = e.key;
    if (key === "ArrowUp" || key === "w" || key === "W") y -= speed;
    if (key === "ArrowDown" || key === "s" || key === "S") y += speed;
    if (key === "ArrowLeft" || key === "a" || key === "A") x -= speed;
    if (key === "ArrowRight" || key === "d" || key === "D") x += speed;

    x = Math.max(0, Math.min(window.innerWidth  - 40, x));
    y = Math.max(0, Math.min(window.innerHeight - 40, y));

    player.style.left = x + "px";
    player.style.top  = y + "px";

    checkCollision();
  });

  function checkCollision(){
    orbs.forEach((orb, i) => {
      if (!orb) return;
      const o = orb.getBoundingClientRect();
      const p = player.getBoundingClientRect();

      if (
        p.left < o.right &&
        p.right > o.left &&
        p.top < o.bottom &&
        p.bottom > o.top
      ) {
        orb.remove();
        orbs[i] = null;

        enqueueMessage(messages[collected]);
        collected++;

        if (collected === messages.length) {
          setTimeout(() => finalScreen.style.display = "flex", 1000);
        }
      }
    });
  }

  // --- message queue (prevents overlap spam) ---
  function enqueueMessage(text){
    messageQueue.push(text);
    if (!showingMessage) showNextMessage();
  }

  function showNextMessage(){
    if (messageQueue.length === 0) return;
    showingMessage = true;

    messageBox.textContent = messageQueue.shift();
    messageBox.style.opacity = 1;
    messageBox.classList.add("msgOn");

    setTimeout(() => {
      messageBox.style.opacity = 0;
      messageBox.classList.remove("msgOn");

      setTimeout(() => {
        showingMessage = false;
        showNextMessage();
      }, 600);
    }, 2200);
  }

  // --- stillness halo ---
  setInterval(() => {
    if (!started) return;
    if (Date.now() - lastMove > 5000) player.classList.add("halo");
    else player.classList.remove("halo");
  }, 500);

  // --- guidance particles ---
  const particles = [];
  for (let i = 0; i < 12; i++) {
    const p = document.createElement("div");
    p.className = "particle";
    p.x = x;
    p.y = y;
    p.angle = Math.random() * Math.PI * 2;
    p.speed = 0.22 + Math.random() * 0.22;
    game.appendChild(p);
    particles.push(p);
  }

  function nearestOrb(px, py){
    let min = Infinity, target = null;
    orbs.forEach(o => {
      if (!o) return;
      const dx = o.offsetLeft - px;
      const dy = o.offsetTop - py;
      const d  = Math.hypot(dx, dy);
      if (d < min) { min = d; target = o; }
    });
    return target;
  }

  function updateParticles(){
    if (started) {
      particles.forEach(p => {
        const target = nearestOrb(x, y);
        if (!target) return;

        const dx = target.offsetLeft - p.x;
        const dy = target.offsetTop  - p.y;
        const dist = Math.hypot(dx, dy) || 1;

        p.angle += 0.02;
        p.x += (dx / dist) * p.speed + Math.sin(p.angle) * 0.28;
        p.y += (dy / dist) * p.speed + Math.cos(p.angle) * 0.28;

        if (dist < 50) { p.x = x; p.y = y; }

        p.style.left = p.x + "px";
        p.style.top  = p.y + "px";
      });
    }
    requestAnimationFrame(updateParticles);
  }
  updateParticles();

  // --- bubbles (more visible + more frequent) ---
  setInterval(() => {
    const b = document.createElement("div");
    const size = 14 + Math.random() * 48;

    b.className = "bubble";
    b.style.width  = size + "px";
    b.style.height = size + "px";
    b.style.left = Math.random() * window.innerWidth + "px";
    b.style.animationDuration = (18 + Math.random() * 18) + "s";
    b.style.setProperty("--drift", (Math.random() * 80 - 40) + "px");

    game.appendChild(b);
    setTimeout(() => b.remove(), 45000);
  }, 1200);

  // --- ambient glows (avoid orbs + message zone so contrast stays clean) ---
  function farFromOrbs(px, py){
    for (const o of orbs) {
      if (!o) continue;
      const ox = o.offsetLeft + 15;
      const oy = o.offsetTop  + 15;
      if (Math.hypot(px - ox, py - oy) < 180) return false;
    }
    const mx = window.innerWidth / 2;
    const my = window.innerHeight - 70;
    if (Math.hypot(px - mx, py - my) < 200) return false;
    return true;
  }

  setInterval(() => {
    const g = document.createElement("div");
    g.className = "ambient-glow";

    const size = 260 + Math.random() * 320;
    g.style.width  = size + "px";
    g.style.height = size + "px";

    let tries = 0, gx = 0, gy = 0;
    do {
      gx = Math.random() * window.innerWidth;
      gy = Math.random() * window.innerHeight;
      tries++;
    } while (!farFromOrbs(gx, gy) && tries < 12);

    g.style.left = gx + "px";
    g.style.top  = gy + "px";
    g.style.animationDuration = (18 + Math.random() * 16) + "s";

    bgLayer.appendChild(g);
    setTimeout(() => g.remove(), 38000);
  }, 3500);

  function stay(){
    finalScreen.innerHTML = "<h1>ü§ç</h1><p>Password : 3942 dm in asguard</p>";
  }

  // initial placement (before start)
  player.style.left = x + "px";
  player.style.top  = y + "px";

  // keep elements inside bounds on resize
  window.addEventListener("resize", () => {
    x = Math.max(0, Math.min(window.innerWidth  - 40, x));
    y = Math.max(0, Math.min(window.innerHeight - 40, y));
    player.style.left = x + "px";
    player.style.top  = y + "px";
  });
</script>

</body>
</html>
